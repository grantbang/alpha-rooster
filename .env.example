# Alpha Rooster Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# GCP Configuration
# ============================================================================
# Your Google Cloud Project ID (from console.cloud.google.com)
GCP_PROJECT_ID=rooster-social-game

# BigQuery dataset name (created in Phase 1.2.5)
BIGQUERY_DATASET=rooster_data

# ============================================================================
# Meta Ads Configuration
# ============================================================================
# Meta Pixel ID (16-digit number from Events Manager)
# Get it from: https://business.facebook.com/events_manager
META_PIXEL_ID=123456789012345

# Meta Conversions API Access Token
# Get it from: Events Manager → Settings → Conversions API → Generate Access Token
META_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Affiliate Network Configuration
# ============================================================================
# Random secret for postback validation (generate with: openssl rand -hex 32)
AFFILIATE_SECRET=your_random_secret_here_replace_me

# MaxBounty API
# Get your API key from: MaxBounty Dashboard → Settings → API Access → Generate Key
MAXBOUNTY_API_KEY=your_maxbounty_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================
# Environment: development or production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# Application domain (for CORS, redirects)
APP_DOMAIN=http://localhost:8080

# ============================================================================
# Optional: Slack/Email Alerts
# ============================================================================
# Slack webhook URL for alerts (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email for error notifications (optional)
# ALERT_EMAIL=your-email@example.com

# ============================================================================
# Optional: Rate Limiting
# ============================================================================
# Max requests per minute (prevent abuse)
# RATE_LIMIT_PER_MINUTE=100
